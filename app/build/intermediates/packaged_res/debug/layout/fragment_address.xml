<?xml version="1.0" encoding="utf-8"?>
        
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressFragment" android:tag="layout/fragment_address_0">

   <EditText
       android:id="@+id/edtText"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Edit Address"/>
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtText"
        android:id="@+id/btnedit"
        android:text="edit Address"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/delbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtText"
        android:layout_alignParentEnd="true"
        android:text="Delete Address"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delbtn"
        android:id="@+id/savebtn"
        android:text="save"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/savebtn"
        android:textSize="15sp"
        android:textStyle="italic"
        android:id="@+id/savedText"/>

</RelativeLayout>
         